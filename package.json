{
  "name": "@rinardnick/client_mcp",
  "version": "1.0.2",
  "description": "TypeScript MCP client with Anthropic Claude integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run test && npm run build",
    "start": "ts-node --esm src/index.ts",
    "dev": "ts-node-dev --esm --respawn src/index.ts"
  },
  "keywords": [
    "mcp",
    "client",
    "typescript",
    "anthropic",
    "claude",
    "llm"
  ],
  "author": "Nicholas Rinard",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "@modelcontextprotocol/sdk": "^1.6.0",
    "@rinardnick/mcp-terminal": "^0.1.1",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@dillip285/mcp-terminal": "^1.0.1",
    "@modelcontextprotocol/server-filesystem": "^2025.1.14",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^1.6.1"
  }
}
